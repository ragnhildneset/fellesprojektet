<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="395.0" prefWidth="475.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gruppe16.main.AddAppointment">
   <children>
      <HBox>
         <children>
            <Label fx:id="titleLabel" text="New Appointment">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
         </children>
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER_LEFT">
         <children>
            <Label prefHeight="16.0" prefWidth="50.0" text="Title:" />
            <TextField fx:id="titleTextField">
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin>
            </TextField>
            <Label prefHeight="16.0" prefWidth="50.0" text="Date:" />
            <DatePicker fx:id="datePicker" prefWidth="150.0" />
         </children>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </HBox>
      <HBox>
         <children>
            <Label prefHeight="16.0" prefWidth="50.0" text="From:" />
            <TextField fx:id="fromTextField" promptText="00:00">
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin>
            </TextField>
            <Label prefHeight="16.0" prefWidth="50.0" text="To:" />
            <TextField fx:id="toTextField" promptText="00:00" />
         </children>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER_LEFT">
         <children>
            <Label prefHeight="16.0" prefWidth="70.0" text="Attendees:" />
            <TextField fx:id="attendeesTextField" prefHeight="25.0" prefWidth="300.0">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </TextField>
            <Button fx:id="findEmployeeBtn" mnemonicParsing="false" text="Find" />
         </children>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER_LEFT">
         <children>
            <Label prefWidth="70.0" text="Room:" />
            <TextField fx:id="roomTextField" editable="false" prefWidth="300.0">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </TextField>
            <Button fx:id="searchForRoomBtn" mnemonicParsing="false" text="Find" />
         </children>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" />
         </VBox.margin>
      </HBox>
      <Label text="Description:">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" />
         </VBox.margin>
      </Label>
      <HBox>
         <children>
            <TextArea fx:id="descriptionTextArea" prefHeight="100.0" prefWidth="471.0" />
         </children>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="TOP_RIGHT">
         <children>
            <HBox prefHeight="26.0" prefWidth="314.0">
               <children>
                  <Label fx:id="errorMessage" textFill="#c30707">
                     <HBox.margin>
                        <Insets top="3.0" />
                     </HBox.margin>
                     <font>
                        <Font size="11.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <Button fx:id="sendBtn" layoutX="402.0" layoutY="10.0" mnemonicParsing="false" text="Send">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin></Button>
            <Button fx:id="cancelBtn" mnemonicParsing="false" text="Cancel">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Button>
         </children>
         <VBox.margin>
            <Insets left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
